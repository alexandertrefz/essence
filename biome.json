{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": [
			"./lib/*",
			"./testFiles/*.js",
			"./src/coverage/*",
			"./src/parser/grammar.ts"
		]
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 4
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"useConst": "off",
				"useShorthandArrayType": "off",
				"noParameterAssign": "off",
				"noUselessElse": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
