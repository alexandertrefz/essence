{
	"name": "essence-compiler",
	"version": "0.0.1",
	"description": "A new simple but powerful language.",
	"main": "index.js",
	"scripts": {
		"clean": "make clean",
		"build": "make all",
		"ci-build": "make compile-grammar && tsc -p .",
		"watch": "make watch",
		"test": "nyc jasmine",
		"coverage": "nyc report --reporter=text-lcov > coverage.lcov",
		"precommit": "make all && jasmine"
	},
	"keywords": [
		"language",
		"essence"
	],
	"author": "Alexander Trefz",
	"license": "MIT",
	"engines": {
		"node": "^9.4.0",
		"yarn": "^1.3.2"
	},
	"devDependencies": {
		"@types/deep-equal": "1.0.1",
		"@types/escodegen": "0.0.6",
		"@types/estree": "0.0.38",
		"@types/jasmine": "2.8.2",
		"@types/nearley": "2.11.0",
		"@types/node": "8.0.53",
		"@types/rollup": "0.51.1",
		"husky": "0.14.3",
		"jasmine": "2.8.0",
		"nyc": "11.3.0",
		"prettier": "1.8.2"
	},
	"dependencies": {
		"deep-equal": "1.0.1",
		"escodegen": "1.9.0",
		"meow": "4.0.0",
		"nearley": "alexandertrefz/nearley#27f50e03a340d411218feb69d4433b7e6deb4a88",
		"rollup": "0.54.1",
		"rollup-plugin-hypothetical": "2.0.0",
		"rollup-plugin-typescript2": "0.10.0",
		"typescript": "2.6.2"
	},
	"repository": {
		"url": "https://atrefz@github.com/atrefz/essence.git",
		"type": "git"
	},
	"nyc": {
		"per-file": true,
		"exclude": [
			"**/grammar.js",
			"**/tests/**",
			"testFiles",
			"wallaby.js",
			"coverage"
		],
		"cache": true,
		"all": true
	}
}
