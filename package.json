{
	"name": "essence-compiler",
	"version": "0.0.1",
	"description": "A new simple but powerful language.",
	"main": "index.js",
	"scripts": {
		"clean": "make clean",
		"build": "make all",
		"ci-build": "make compile-grammar && tsc -p .",
		"watch": "make watch",
		"test": "make all && nyc jasmine",
		"coverage": "nyc report --reporter=text-lcov > coverage.lcov"
	},
	"keywords": [
		"language",
		"essence"
	],
	"author": "Alexander Trefz",
	"license": "MIT",
	"engines": {
		"node": "^12.4.0",
		"yarn": "^1.16.0"
	},
	"devDependencies": {
		"@types/deep-equal": "1.0.1",
		"@types/escodegen": "0.0.6",
		"@types/estree": "0.0.39",
		"@types/jasmine": "3.4.0",
		"@types/nearley": "2.11.0",
		"@types/node": "12.7.3",
		"husky": "3.0.4",
		"jasmine": "3.4.0",
		"nyc": "14.1.1",
		"pretty-quick": "1.11.1",
		"prettier": "1.18.2"
	},
	"dependencies": {
		"deep-equal": "1.1.0",
		"escodegen": "1.12.0",
		"meow": "5.0.0",
		"nearley": "2.19.0",
		"rollup": "1.20.3",
		"rollup-plugin-hypothetical": "2.1.0",
		"rollup-plugin-typescript2": "0.24.0",
		"typescript": "3.6.2"
	},
	"repository": {
		"url": "https://atrefz@github.com/atrefz/essence.git",
		"type": "git"
	},
	"nyc": {
		"per-file": true,
		"exclude": [
			"**/grammar.js",
			"**/tests/**",
			"testFiles",
			"wallaby.js",
			"coverage"
		],
		"cache": true,
		"all": true
	}
}
