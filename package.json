{
  "name": "essence-compiler",
  "version": "0.0.1",
  "description": "A new simple but powerful language.",
  "main": "index.js",
  "scripts": {
    "pre-commit": "bun compile-grammar && bun format && bun test",
    "compile-grammar": "nearleyc src/parser/grammar.ne -o src/parser/grammar.ts",
    "format": "biome format . --write",
    "check": "biome check . --apply"
  },
  "keywords": [
    "language",
    "essence"
  ],
  "author": "Alexander Trefz",
  "license": "MIT",
  "engines": {
    "bun": ">=0.7.x"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.2",
    "@types/deep-equal": "1.0.1",
    "@types/escodegen": "0.0.7",
    "@types/estree": "1.0.1",
    "@types/nearley": "2.11.2",
    "bun-types": "0.7.3",
    "husky": "8.0.3"
  },
  "dependencies": {
    "bigint-fraction": "1.0.6",
    "deep-equal": "2.2.2",
    "esbuild": "0.19.0",
    "escodegen": "2.1.0",
    "nearley": "2.20.1",
    "typescript": "5.1.6",
    "yargs": "17.7.2"
  },
  "repository": {
    "url": "https://atrefz@github.com/atrefz/essence.git",
    "type": "git"
  }
}